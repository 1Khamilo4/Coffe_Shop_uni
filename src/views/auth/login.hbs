<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card mt-8  rounded">
      <div class="card-header text-center pt-8">
        <h1 class="h4">
          Account Login
        </h1>
      </div>
      <img
        class="rounded-circle mx-auto d-block logo m-2"
        src="/assets/img/logo.png"
        alt="Logo"
        width="50%"
      />
      <div class="card-body">
        <form action="/auth/login" method="POST">
          <div class="mb-3">
            <label for="correo">Email:</label>
            <input
              type="email"
              class="form-control"
              name="correo"
              placeholder="Correo"
              autofocus
            />
          </div>
          <div class="mb-3">
            <label for="passswore">Password:</label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Password"
            />
          </div>
          <button class="btn btn-success btn-block">
            Signin
          </button>
        </form>
      </div>

      <p class="text-center">Don't Have an Account? <a href="/auth/signup" class="text-info">Register</a></p>
    </div>
  </div>
</div>

